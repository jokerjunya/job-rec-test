rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Jobsコレクション
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if true; // データ移行用に一時的に許可（後で制限）
    }
    
    // Usersコレクション
    match /users/{userId} {
      allow read: if true;
      allow write: if true; // ユーザー作成を許可
    }
    
    // UserInteractionsコレクション
    match /user_interactions/{interactionId} {
      allow read: if true;
      allow create: if true; // インタラクション作成を許可
      allow update, delete: if false; // 更新・削除は不可
    }
  }
}